<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorImage"
        android:contentDescription="@string/thumbnail"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:theme="@android:style/ThemeOverlay.Material.Dark" />

    <TextView
        android:id="@+id/tv_title_video"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/iv_video"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_video"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/iv_video"
        android:textColor="@color/colorFontSecondary"
        android:textSize="15sp"
        tools:text="Source" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_site"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/iv_video"
        android:textColor="@color/colorFontSecondary"
        android:textSize="15sp"
        tools:text="Type" />

</RelativeLayout>